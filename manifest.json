{
  "manifest_version": 3,
  "name": "SF CRM Extractor",
  "version": "1.4.0",
  "description": "Extract Salesforce records from detail pages",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.lightning.force.com/*",
        "https://*.salesforce.com/*"
      ],
      "js": [
        "src/content/extractors/opportunity.js",
        "src/content/extractors/lead.js",
        "src/content/extractors/contact.js",
        "src/content/extractors/account.js",
        "src/content/extractors/task.js",
        "src/content/content-main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "SF CRM Extractor"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}